{
    "name": "lanlock-client",
    "version": "1.0.0",
    "description": "LANLock Exam Client - Cross-platform kiosk mode",
    "main": "main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "build": "electron-builder",
        "build:win": "electron-builder --win portable",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux AppImage"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "socket.io-client": "^4.7.4"
    },
    "build": {
        "appId": "com.lanlock.client",
        "productName": "LANLock",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "config.json"
        ],
        "win": {
            "target": "portable",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        }
    }
}